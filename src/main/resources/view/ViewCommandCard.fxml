<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Hyperlink?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS" >
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="TOP_RIGHT" minHeight="5" GridPane.columnIndex="0">
            <padding>
                <Insets top="10" right="15" bottom="5" left="5" />
            </padding>
            <HBox spacing="5" alignment="TOP_RIGHT">
                <Label fx:id="applicationProcess" styleClass="cell_small_label" text="\$applicationProcess" alignment="TOP_RIGHT"/>
                <minWidth>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
            </HBox>
        </VBox>

        <VBox alignment="CENTER_LEFT" minHeight="80" >
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
            </HBox>
            <FlowPane fx:id="tags" />
            <Label fx:id="position" styleClass="cell_small_label" text="\$position" />
            <Label fx:id="date" styleClass="cell_small_label" text="\$date" />
            <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
            <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
            <HBox>
                <Label fx:id="websiteLabel" styleClass="cell_small_label" text="Website: " />
                <Hyperlink fx:id="website" styleClass="cell_small_label" text="\$website" onMouseClicked="#handleWebsite" >
                    <padding>
                        <Insets bottom="0" left="-1" right="0" top="-1"/>
                    </padding>
                </Hyperlink>
            </HBox>

            <Label fx:id="remark" styleClass="cell_small_label" text="\$remark" />
        </VBox>
    </GridPane>
</HBox>
