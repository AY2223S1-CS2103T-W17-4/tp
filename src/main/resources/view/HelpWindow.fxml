<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>
<?import javafx.scene.control.ScrollPane?>

<fx:root resizable="true" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>
      <ScrollPane fx:id="myScrollPane" fitToHeight="true" fitToWidth="true" pannable="true" vbarPolicy="ALWAYS" hbarPolicy="ALWAYS">
        <VBox alignment="CENTER" fx:id="helpResultContainer" minHeight="500.0" minWidth="750.0">
          <children>
            <Label fx:id="welcomeMessage" text="Label" alignment="CENTER">
              <padding>
                <Insets top="10.0" right="5" bottom="10.0" left="5" />
              </padding>
            </Label>
            <Label fx:id="commandSummaryIntro" text="Label" alignment="CENTER_LEFT">
              <padding>
                <Insets right="5" left="5" />
              </padding>
            </Label>
            <Label fx:id="commandSummary" text="Label">
              <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
              </padding>
            </Label>

            <HBox alignment="CENTER" fx:id="helpMessageContainer" minHeight="30.0" minWidth="750.0">
              <children>
                <Label fx:id="userGuideMessage" text="Label">
                  <padding>
                    <Insets top="5.0" right="5.0" bottom="5.0" left="15.0" />
                  </padding>
                </Label>
                <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                  <padding>
                    <Insets top="5.0" right="5.0" bottom="5.0" left="5.0" />
                  </padding>
                </Button>
              </children>
              <padding>
                <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
              </padding>
            </HBox>
          </children>
          <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
        </VBox>
      </ScrollPane>
    </Scene>
  </scene>
</fx:root>
